---
layout: base
---
<article class="wiki-page">
    <header class="wiki-header">
        <h1>{{ title }}</h1>
        {% if tags %}
        <div class="wiki-tags">
            {% for tag in tags %}
            <span class="tag">{{ tag }}</span>
            {% endfor %}
        </div>
        {% endif %}
        {% if date %}
        <time class="wiki-date" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
        {% endif %}
    </header>
    
    <div class="wiki-content">
        {{ content | safe }}
    </div>
    
    <footer class="wiki-footer">
        <nav class="wiki-nav">
            <a href="/protocollage/">‚Üê Back to Protocollage</a>
        </nav>
    </footer>
</article>

